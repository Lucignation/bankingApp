<%- include('../includes/header.ejs') %>
<link rel="stylesheet" href="css/form.css">
<body>
        <%- include('../includes/navigation.ejs') %>

    <main>
        <div class="mainContent">
            <h2><strong><%=addCred.name%></strong></h2>
            <div class="account">
                    <h4><strong>Account Number: </strong><%=addCred.accountNumber%></h4>

                    <p>Current Amount: <strong>N <%=addCred.account.transaction.amount || 0.00%></strong></p>
                </div>
            </div>
        <div class="innerContent">
            <div class="form-control innerContent-each">
                <form action="/transfer" method="POST">
                    <input type="text" name="account-name" value="" placeholder="Account Name" />

                    <input type="number" name="account-number" value="" placeholder="Account Number" />
                    
                    <input type="text" name="amount" value="" placeholder="Amount"/>

                    <select>
                        <option>United Bank of Africa (UBA)</option>
                        <option>First Bank of Nigeria (FBN)</option>
                        <option>Guaranty Trust Bank (GTBank)</option>
                        <option>Access Bank</option>
                        <option>Polaris Bank</option>
                        <option>FCMB</option>
                        <option>KeyStone Bank</option>
                    </select>

                    <select>
                            <option>Savings</option>
                            <option>Current</option>
                        </select>
                    <div class="btn"><button>Send</button></div>
                </form>
            </div>
        </div>
    </main>


<%- include('../includes/footer.ejs') %>
